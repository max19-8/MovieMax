<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_width="116dp"
    android:layout_marginHorizontal="@dimen/small_margin"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="116dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_film"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:contentDescription="@string/image_movie"
            android:src="@color/black" />

        <View
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@drawable/background_rating"/>

        <TextView
            android:id="@+id/rating_in_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/text_view_small_margin_item"
            android:layout_gravity="end" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/image_view_margin"
            android:src="@drawable/ic_star_icon"/>
    </FrameLayout>
    <TextView
        android:id="@+id/name_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text_view_item_margin"
        android:ellipsize="end"
        android:textAlignment="inherit"
        android:maxLines="1"
        android:singleLine="true" />
</LinearLayout>